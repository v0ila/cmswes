<?php /* C:\xampp\htdocs\cms\extensions/system/views/admin/user/edit.razr */ extract(array (  'user' => NULL,  'app' => NULL,  'status' => NULL,  'name' => NULL,  'roles' => NULL,  'role' => NULL,), EXTR_SKIP) ?><?php echo($this->getDirective('script')->call(array('user', 'extension://system/assets/js/user/edit.js', 'requirejs'))) ?>

